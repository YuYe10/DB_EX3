# openGauss connection settings (direct or via SSH tunnel)
OG_HOST=192.168.0.61         # 远程服务器内网/数据库监听地址
OG_PORT=26000                # 数据库端口
OG_DBNAME=student_db
OG_USER=appuser
OG_PASSWORD=your_db_password

# Optional SSH tunnel (set OG_SSH_TUNNEL=true to enable)
OG_SSH_TUNNEL=false
OG_SSH_HOST=1.92.114.171     # SSH 公网 IP
OG_SSH_PORT=22
OG_SSH_USER=your_ssh_user
OG_SSH_PASSWORD=your_ssh_password
# OG_SSH_PKEY=/path/to/private/key    # 使用密钥时填写
OG_TUNNEL_REMOTE_HOST=127.0.0.1       # 隧道目标主机，DB 在本机时推荐 127.0.0.1

# Flask
FLASK_ENV=development
